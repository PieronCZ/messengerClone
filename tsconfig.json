{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2019"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true
  },
  "exclude": [
    "**/node_modules/**"
  ],
  "include": [
    "src"
  ]
}
